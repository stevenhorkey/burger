<body>
  {{{ body }}}

<script>
    $('#submit-burger').one('click',function(event){
        event.preventDefault();
        var newBurger = {
            author: $('#type-burger').val().trim(),
        }
        $.ajax('/api/burgers',{
        type:'POST',
        data: newBurger
        }).then(
        function(){
          console.log('created new burger');

          location.reload();
        });
    })

    $('.devour-btn').one('click',function(event){
        var id = $(this).data('id');

    console.log(id);

    $.ajax('/api/burgers/'+id,{
      type: 'PUT'
    }).then(
      function(){
        console.log('devoured',id);


        location.reload();
      }
    )
    })
</script>
</body>
</html>