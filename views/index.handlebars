<section class="home-body">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 offset-sm-3">

                <h1 class="app-title">Burgerish!</h1>

                <input type="text" rows="4" id="type-burger">

                </input>
                <br>
                <input type="submit" id="submit-burger">
                <p>Enter the burger you want to eat and click the 'Submit' button.</p>

            </div>
        </div>
    </div>
</section>

<section class="burgers">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 offset-sm-3 burger-items">
                {{!-- For each burger row in burgers_db, create a list item with its id, its name, and its devour status --}}
                <h2 class="burger-titles">Burgers Ready to Eat!</h2>

                <ul>
                    {{#each burgers}}
                        {{#unless devoured}}
                        {{> burgers/burger-block devoured=false}}
                        {{/unless}}
                    {{/each}}
                </ul>

                <h2 class="burger-titles">Burgers Eaten</h2>

                <ul>
                    {{#each burgers}}
                        {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</section>